@page
@model E_Commerce_Temp.Pages.Categories.IndexModel

<div class="container-fluid mb-2">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/Categories/Create" class="btn btn-sm btn-primary">
				<i class="fs-6 bi bi-plus-circle px-1"></i>Create Category
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr class="text-center">
			<th>
				Category Name
			</th>
			<th>
				Display Orders
			</th>
			<th>
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.Category.OrderByDescending(o => o.DisplayOrder))
		{
			<tr>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.DisplayOrder
				</td>
				<td>
					<div class="btn-group d-flex justify-content-center" role="group">
						<a class="btn btn-sm btn-primary mx-2" asp-page="/Categories/Edit" asp-route-Id="@obj.Id">
							<i class="bi bi-pencil-square fs-6"></i> Edit
						</a>

						<a class="btn btn-sm btn-danger mx-2" asp-page="/Categories/Delete" asp-route-Id="@obj.Id">
							<i class="bi bi-trash fs-6"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
