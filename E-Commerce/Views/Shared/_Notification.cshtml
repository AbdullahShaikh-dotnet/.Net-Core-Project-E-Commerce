<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/izitoast/dist/css/iziToast.min.css">
<script src="//cdn.jsdelivr.net/npm/izitoast/dist/js/iziToast.min.js"></script>


@if (TempData["success"] != null)
{
	<script>

        iziToast.success({
            title: 'Success',
            titleColor: '#064e3b', // Tailwind 'emerald-900'
            message: '@TempData["success"]',
            position: 'topCenter',
            theme: 'light',
            backgroundColor: '#d1fae5', // Tailwind 'emerald-100'
            messageColor: '#065f46', // Tailwind 'emerald-700'
            timeout: 5000,
            layout: 1,
            close: true,
            progressBarColor: '#10b981', // Tailwind 'emerald-500'
            transitionIn: 'fadeInUp',
            transitionOut: 'fadeOut',
            drag: true
        });


	</script>
}

