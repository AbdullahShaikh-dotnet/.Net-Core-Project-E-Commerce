    <script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="//cdn.datatables.net/v/bs5/jszip-3.10.1/dt-2.1.8/af-2.7.0/b-3.2.0/b-colvis-3.2.0/b-html5-3.2.0/b-print-3.2.0/cr-2.0.4/date-1.5.4/fc-5.0.4/fh-4.0.1/kt-2.12.1/r-3.0.3/rg-1.5.1/rr-1.5.0/sc-2.4.3/sb-1.8.1/sp-2.3.3/sl-2.1.0/sr-1.4.1/datatables.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleClass = (element, add, remove) => {
                element.classList.remove(...remove);
                element.classList.add(...add);
            };

            // Toggle mobile menu
            document.querySelector('.mobile-menu-button')?.addEventListener('click', () => {
                const menu = document.querySelector('.mobile-menu');
                toggleClass(menu,
                    menu.classList.contains("max-h-0") ? ["max-h-[500px]", "opacity-100", "scale-100"] : ["max-h-0", "opacity-0", "scale-95"],
                    menu.classList.contains("max-h-0") ? ["max-h-0", "opacity-0", "scale-95"] : ["max-h-[500px]", "opacity-100", "scale-100"]
                );
            });

            // Toggle mobile submenu
            document.querySelectorAll('.mobile-submenu-button').forEach(button => {
                button.addEventListener('click', function () {
                    const submenu = this.nextElementSibling;
                    submenu.style.maxHeight = submenu.style.maxHeight ? null : submenu.scrollHeight + 'px';
                    this.querySelector('.mobile-submenu-icon').classList.toggle('rotate-180');
                });
            });

            // Toggle desktop flyout menu
            document.querySelectorAll('.flyout-button').forEach(button => {
                button.addEventListener('click', function (event) {
                    event.stopPropagation();
                    const menu = this.nextElementSibling;
                    menu.classList.toggle('invisible');
                    menu.classList.toggle('opacity-0');
                    menu.classList.toggle('scale-95');
                    menu.classList.toggle('opacity-100');
                    menu.classList.toggle('scale-100');
                });
            });

            // Close menus when clicking outside
            document.addEventListener('click', (event) => {
                document.querySelectorAll('.flyout-menu').forEach(menu => {
                    if (!menu.parentElement.contains(event.target)) {
                        toggleClass(menu, ["invisible", "opacity-0", "scale-95"], ["opacity-100", "scale-100"]);
                    }
                });
            });
        });

    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
