@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<div class="bg-white p-8 rounded-2xl">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Sidebar Toggle Button (visible on small screens) -->
        <button id="toggle-sidebar" class="md:hidden bg-blue-500 text-white px-4 py-2 rounded-lg mb-4">
            Manage Account
        </button>

        <!-- Sidebar -->
        <div id="sidebar" class="hidden md:block md:col-span-1 bg-white p-5 rounded-xl shadow-sm border border-gray-200">
            <partial name="_ManageNav" />
        </div>

        <!-- Main Content -->
        <div class="md:col-span-3">
            <div class="bg-gray-50 p-6 rounded-xl shadow-sm border border-gray-200">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)

    <script>
        document.getElementById("toggle-sidebar").addEventListener("click", function () {
            var sidebar = document.getElementById("sidebar");
            sidebar.classList.toggle("hidden");
        });
    </script>
}
