@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-2xl font-semibold text-gray-800 mb-4">@ViewData["Title"]</h3>

<div class="max-w-lg mx-auto bg-white shadow-lg rounded-xl p-6">
    <p class="text-gray-600">
        Your account contains personal data that you have provided. This page allows you to <strong>download</strong> or <strong>delete</strong> that data.
    </p>

    <div class="mt-4 p-4 bg-yellow-50 border-l-4 border-yellow-400 text-yellow-800 rounded-lg">
        <p class="font-medium">⚠ Deleting your data will permanently remove your account, and this action <span class="font-bold">cannot be undone.</span></p>
    </div>

    <div class="mt-6 space-y-4">
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg shadow-md transition">
                 Download Personal Data
            </button>
        </form>

        <a id="delete" asp-page="DeletePersonalData"
            class="w-full inline-block text-center bg-red-600 hover:bg-red-700 text-white font-semibold py-3 rounded-lg shadow-md transition">
            Delete Account
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
