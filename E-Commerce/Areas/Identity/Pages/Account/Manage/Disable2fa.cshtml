@page
@model Disable2faModel
@{
    ViewData["Title"] = "Disable Two-Factor Authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="min-h-screen bg-white py-8">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
@*         <!-- Header -->
        <div class="mb-6">
            <h1 class="text-2xl font-semibold text-gray-900">Disable 2FA</h1>
            <p class="mt-1 text-sm text-gray-500">Turn off two-factor authentication for your account</p>
        </div>
 *@
        <!-- Status Message -->
        <partial name="_StatusMessage" for="StatusMessage" />

        <!-- Main Card -->
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
            <!-- Warning Section -->
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-amber-500">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-gray-900">Security Warning</h3>
                        <div class="mt-2 text-sm text-gray-600">
                            <p class="mb-2">
                                <strong>Disabling 2FA will reduce the security of your account.</strong>
                            </p>
                            <p>
                                This action only turns off 2FA. It does not reset your authenticator keys. If you need to change your authenticator keys, please
                                <a asp-page="./ResetAuthenticator" class="text-gray-800 font-medium hover:text-gray-900 underline">reset your authenticator keys</a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Information Section -->
            <div class="p-6 bg-gray-50 border-b border-gray-200">
                <div class="text-sm text-gray-600">
                    <p>
                        Two-factor authentication adds an extra layer of security to your account by requiring more than just a password to sign in.
                        By disabling 2FA, your account will only be protected by your password.
                    </p>
                </div>
            </div>

            <!-- Action Section -->
            <div class="p-6">
                <div class="text-sm text-gray-600 mb-4">
                    <p>Are you sure you want to disable two-factor authentication?</p>
                </div>

                <form method="post" class="flex justify-end">
                    <button type="submit" class="flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                        </svg>
                        Disable 2FA
                    </button>
                </form>
            </div>
        </div>

        <!-- Back Link -->
        <div class="mt-6">
            <a asp-page="./TwoFactorAuthentication" class="text-sm text-gray-600 hover:text-gray-900 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                </svg>
                Back to two-factor authentication
            </a>
        </div>
    </div>
</div>