@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-3xl font-extrabold text-gray-900 mb-6">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-200 max-w-lg mx-auto">
    <form id="change-password-form" method="post" class="space-y-5">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-medium" role="alert"></div>

        <!-- Old Password (No Toggle) -->
        <div>
            <label asp-for="Input.OldPassword" class="block text-gray-700 font-semibold mb-1">Current Password</label>
            <input asp-for="Input.OldPassword" type="password" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 transition" autocomplete="current-password" aria-required="true" placeholder="Enter your old password" />
            <span asp-validation-for="Input.OldPassword" class="text-red-500 text-sm font-medium"></span>
        </div>

        <!-- New Password (With Toggle) -->
        <div class="relative">
            <label asp-for="Input.NewPassword" class="block text-gray-700 font-semibold mb-1">New Password</label>
            <input asp-for="Input.NewPassword" id="new-password" type="password" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 transition pr-10" autocomplete="new-password" aria-required="true" placeholder="Enter your new password" />
            <span asp-validation-for="Input.NewPassword" class="text-red-500 text-sm font-medium"></span>

            <!-- Eye Icon -->
            <button type="button" onclick="togglePassword('new-password', this, event)" class="absolute top-10 right-3 text-gray-500 hover:text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>
            </button>
        </div>

        <!-- Confirm Password (With Toggle) -->
        <div class="relative">
            <label asp-for="Input.ConfirmPassword" class="block text-gray-700 font-semibold mb-1">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" id="confirm-password" type="password" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 transition pr-10" autocomplete="new-password" aria-required="true" placeholder="Confirm your new password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm font-medium"></span>

            <!-- Eye Icon -->
            <button type="button" onclick="togglePassword('confirm-password', this, event)" class="absolute top-10 right-3 text-gray-500 hover:text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>
            </button>
        </div>

        <!-- Update Password Button -->
        <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-semibold py-3 rounded-lg hover:opacity-90 transition-all shadow-md">
            Update Password
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword(inputId, eyeBtn, event) {
            event.preventDefault();

            const input = document.getElementById(inputId);
            const svgIcon = eyeBtn.querySelector('svg');
            const eyeClosedSvgIcon = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                    </svg>`;

            const eyeOpenSvgIcon = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>`;

            if (input.type === "password") {
                input.type = "text";
                svgIcon.innerHTML = eyeClosedSvgIcon;
            } else {
                input.type = "password";
                svgIcon.innerHTML = eyeOpenSvgIcon;
            }
        }
    </script>
}
