@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="max-w-md mx-auto p-4">
    <!-- Status Message with subtle animation -->
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-6 space-y-6">
            <div class="text-center mb-2">
                <div class="w-16 h-16 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-3">
                    <i class="bi bi-person text-2xl text-gray-600"></i>
                </div>
                <h2 class="text-xl font-semibold text-gray-800">Profile Settings</h2>
                <p class="text-gray-500 text-sm mt-1">Update your account information</p>
            </div>

            <form id="profile-form" method="post" class="space-y-5">
                <div asp-validation-summary="ModelOnly"
                     class="text-red-600 text-sm p-3 bg-red-50 rounded-lg"
                     role="alert"></div>

                <!-- Username Field -->
                <div class="space-y-1">
                    <label asp-for="Username" class="text-sm font-medium text-gray-700">Username</label>
                    <div class="relative">
                        <input asp-for="Username"
                               class="w-full px-4 py-2.5 bg-gray-50 border-0 border-b border-gray-200 text-gray-600
                                      focus:border-gray-500 focus:ring-0 transition-colors duration-200
                                      cursor-not-allowed rounded-md"
                               disabled />
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-gray-400">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Phone Number Field -->
                <div class="space-y-1">
                    <label asp-for="Input.PhoneNumber" class="text-sm font-medium text-gray-700">Phone Number</label>
                    <input asp-for="Input.PhoneNumber"
                           class="w-full px-4 py-2.5 border-0 border-b border-gray-200 text-gray-700
                                  focus:border-gray-500 focus:ring-0 transition-colors duration-200
                                  placeholder-gray-400 rounded-md"
                           placeholder="+91 (___) ___-____" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-xs block pt-1"></span>
                </div>

                <!-- Save Button -->
                <div class="pt-2">
                    <button id="update-profile-button" type="submit"
                            class="w-full bg-gray-900 text-white font-medium py-2.5 px-4 rounded-lg
                                   hover:bg-gray-800 transition-colors duration-200
                                   focus:outline-none focus:ring-2 focus:ring-gray-300 focus:ring-offset-2
                                   flex items-center justify-center gap-2">
                        <i class="bi bi-check-lg"></i>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Add subtle animation to form elements
        document.addEventListener('DOMContentLoaded', function() {
            const formElements = document.querySelectorAll('input, button');
            formElements.forEach(el => {
                el.classList.add('transition-all', 'duration-200', 'ease-out');
            });
        });
    </script>
}