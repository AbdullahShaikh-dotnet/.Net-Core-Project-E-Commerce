@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-3xl font-bold text-gray-700 mb-6">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-200 max-w-lg mx-auto">
    <form id="profile-form" method="post" class="space-y-5">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-medium" role="alert"></div>

        <!-- Username -->
        <div>
            <label asp-for="Username" class="block text-gray-700 font-semibold mb-1">Username</label>
            <input asp-for="Username" class="w-full p-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-600 cursor-not-allowed" disabled />
        </div>

        <!-- Phone Number -->
        <div>
            <label asp-for="Input.PhoneNumber" class="block text-gray-700 font-semibold mb-1">Phone Number</label>
            <input asp-for="Input.PhoneNumber" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 transition" />
            <span asp-validation-for="Input.PhoneNumber" class="text-red-500 text-sm font-medium"></span>
        </div>

        <!-- Save Button -->
        <button id="update-profile-button" type="submit"
                class="w-full opacity-80 bg-blue-200 text-blue-700 font-semibold py-3 rounded-lg
                hover:opacity-100 transition-all duration-300">
            Save Changes
        </button>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
