@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="flex justify-center items-center h-screen">
    <div class="w-full max-w-md bg-white p-6 rounded-lg shadow-md border border-gray-200 text-center">
        <h1 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h1>
        <p class="text-gray-600 mt-3">
            We've sent a password reset link to your email. Please check your inbox and follow the instructions.
        </p>

        <div class="mt-6">
            <a asp-page="./Login" class="inline-block w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg shadow-md transition">
                Back to Login
            </a>
        </div>

        <div class="text-sm text-gray-500 mt-4">
            Didn’t receive the email? <a asp-page="./ForgotPassword" class="text-blue-600 hover:underline">Resend</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
    }
</style>
