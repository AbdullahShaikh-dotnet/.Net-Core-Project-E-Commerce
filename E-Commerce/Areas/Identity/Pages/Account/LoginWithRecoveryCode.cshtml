@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery Code Verification";
}

<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-semibold text-gray-900 text-center">@ViewData["Title"]</h1>
    <p class="text-gray-600 text-center mt-2">
        You have requested to log in with a recovery code. This login will not be remembered until you provide
        an authenticator app code at log in or disable 2FA and log in again.
    </p>

    <form method="post" class="mt-6 space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

        <div>
            <label asp-for="Input.RecoveryCode" class="block text-sm font-medium text-gray-700">Recovery Code</label>
            <input asp-for="Input.RecoveryCode" class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 outline-none" autocomplete="off" placeholder="Enter Recovery Code" />
            <span asp-validation-for="Input.RecoveryCode" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg shadow-md transition">
            Log in
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
