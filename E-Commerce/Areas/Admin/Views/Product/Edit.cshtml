@model Product


<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Edit Product</h2>
		</div>
	</div>
</div>


<form method="post">
	<div class="border p-3 mt-2">

		<div class="row">
			<div class="col-md-6">
				<div class="mb-3 p-1">
					<label asp-for="Title" class="p-0"></label>
					<input asp-for="Title" class="form-control" type="text" />
					<span class="fs-6 text-danger" asp-validation-for="Title"></span>
				</div>
				<div class="mb-3 p-1">
					<label asp-for="ISBN" class="p-0"></label>
					<input asp-for="ISBN" class="form-control" type="text" />
					<span class="fs-6 text-danger" asp-validation-for="ISBN"></span>
				</div>
				<div class="mb-3 p-1">
					<label asp-for="Author" class="p-0"></label>
					<input asp-for="Author" class="form-control" type="text" />
					<span class="fs-6 text-danger" asp-validation-for="Author"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="mb-3 p-1">
					<label asp-for="Description" class="p-0"></label>
					<textarea rows="9" asp-for="Description" class="form-control"></textarea>
					<span class="fs-6 text-danger" asp-validation-for="Description"></span>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-3">
				<div class="mb-3 p-1">
					<label asp-for="ListPrice" class="p-0"></label>
					<input asp-for="ListPrice" class="form-control" type="text" />
					<span class="fs-6 text-danger" asp-validation-for="ListPrice"></span>
				</div>
			</div>
			<div class="col-md-3">
				<div class="mb-3 p-1">
					<label asp-for="Price" class="p-0"></label>
					<input asp-for="Price" class="form-control" type="text" />
					<span class="fs-6 text-danger" asp-validation-for="Price"></span>
				</div>
			</div>

			<div class="col-md-3">
				<div class="mb-3 p-1">
					<label asp-for="Price50" class="p-0"></label>
					<input asp-for="Price50" class="form-control" type="text" />
					<span class="fs-6 text-danger" asp-validation-for="Price50"></span>
				</div>
			</div>
			<div class="col-md-3">
				<div class="mb-3 p-1">
					<label asp-for="Price100" class="p-0"></label>
					<input asp-for="Price100" class="form-control" type="text" />
					<span class="fs-6 text-danger" asp-validation-for="Price100"></span>
				</div>
			</div>
		</div>

		<div class="row d-flex justify-content-between">
			<div class="col-6">
				<a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-sm border">
					<i class="fs-6 p-1 bi bi-arrow-return-left"></i>
					Back to List
				</a>
			</div>
			<div class="col-6 text-end">
				<button class="btn btn-sm btn-primary" type="submit">Edit</button>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}