@model ProductVM


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@(Model.product.Id != 0 ? "Update" : "Create") Product</h2>
        </div>
    </div>
</div>


<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="product.Id" />
    <input type="hidden" asp-for="product.ImageURL" />
    <div class="row">
        <div class="@(Model.product.Id == 0 ? "col-md-12" : "col-md-10")">
            <div class="border rounded-2 shadow p-3 mt-2">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3 p-1">
                                    <label asp-for="product.Title" class="p-0"></label>
                                    <input asp-for="product.Title" class="form-control rounded-2" type="text" />
                                    <span class="fs-6 text-danger" asp-validation-for="product.Title"></span>
                                </div>

                                <div class="mb-3 p-1">
                                    <label asp-for="product.Category_ID" class="p-0"></label>
                                    <select asp-for="product.Category_ID" asp-items="@Model.categoryList" class="form-select rounded-2" type="text">
                                        <option disabled selected>Select Category</option>
                                    </select>
                                    <span class="fs-6 text-danger" asp-validation-for="product.Category_ID"></span>
                                </div>

                            </div>
                            <div class="col-md-6">

                                <div class="mb-3 p-1">
                                    <label asp-for="product.Author" class="p-0"></label>
                                    <input asp-for="product.Author" class="form-control rounded-2" type="text" />
                                    <span class="fs-6 text-danger" asp-validation-for="product.Author"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3 p-1">
                                            <label asp-for="product.ISBN" class="p-0"></label>
                                            <input asp-for="product.ISBN" class="form-control rounded-2" type="text" />
                                            <span class="fs-6 text-danger" asp-validation-for="product.ISBN"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3 p-1">
                                            <label asp-for="product.ImageURL" class="p-0"></label>
                                            <input asp-for="product.ImageURL" class="form-control rounded-2" type="file" name="file" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3 p-1">
                                    <label asp-for="product.ListPrice" class="p-0"></label>
                                    <input asp-for="product.ListPrice" class="form-control rounded-2" type="text" />
                                    <span class="fs-6 text-danger" asp-validation-for="product.ListPrice"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3 p-1">
                                    <label asp-for="product.Price" class="p-0"></label>
                                    <input asp-for="product.Price" class="form-control rounded-2" type="text" />
                                    <span class="fs-6 text-danger" asp-validation-for="product.Price"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3 p-1">
                                    <label asp-for="product.Price50" class="p-0"></label>
                                    <input asp-for="product.Price50" class="form-control rounded-2" type="text" />
                                    <span class="fs-6 text-danger" asp-validation-for="product.Price50"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3 p-1">
                                    <label asp-for="product.Price100" class="p-0"></label>
                                    <input asp-for="product.Price100" class="form-control rounded-2" type="text" />
                                    <span class="fs-6 text-danger" asp-validation-for="product.Price100"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3 p-1">
                                    <label asp-for="product.Description" class="p-0"></label>
                                    <textarea rows="9" asp-for="product.Description" class="form-control rounded-2"></textarea>
                                    <span class="fs-6 text-danger" asp-validation-for="product.Description"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row d-flex justify-content-between">
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-sm border rounded-2">
                            <i class="fs-6 p-1 bi bi-arrow-return-left"></i>
                            Back to List
                        </a>
                    </div>
                    <div class="col-6 text-end">
                        @if (Model.product.Id == 0)
                        {
                            <button class="btn btn-secondary border-black border-1 btn-sm border clearBtn rounded-2" type="reset">Clear</button>
                            <button class="btn btn-sm btn-primary rounded-2" type="submit">Create</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-primary rounded-2" type="submit">Update</button>
                        }
                    </div>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.product.ImageURL))
        {
            <div class="col-md-2">
                <div class="border shadow p-3 mt-2 rounded-2">
                    <img src="@Model.product.ImageURL" class="object-fit-contain h-auto w-100 rounded-2" />
                </div>
            </div>
        }
    </div>

</form>

@section Scripts {

    <script>
        tinymce.init({
          selector: 'textarea',
          skin: 'bootstrap',
          icons:'jam',
          toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
          plugins: [
            'advlist', 'autolink', 'lists', 'link', 'charmap', 'preview',
            'searchreplace', 'visualblocks', 'advcode', 'fullscreen','math',
            'insertdatetime', 'media', 'table', 'powerpaste', 'code', 'tinymcespellchecker'
          ],
          height: 250
        });

    </script>

    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}