@model List<Category>

<div class="container-fluid mb-2">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-primary">
				<i class="fs-6 bi bi-plus-circle px-1"></i>Create Category
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered shadow-sm rounded-table">
	<thead class="border-bottom-0">
		<tr class="text-center">
			<th>
				Category Name
			</th>
			<th>
				Display Orders
			</th>
			<th>
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.OrderByDescending(o => o.DisplayOrder))
		{
			<tr>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.DisplayOrder
				</td>
				<td>
					<div class="btn-group d-flex justify-content-center" role="group">
						<a class="mx-4" asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id">
							<i class="bi bi-pencil-square fs-4"></i>
						</a>

						<a class="text-danger mx-4" asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id">
							<i class="bi bi-trash fs-4"></i>
						</a>

						@*<form asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this record?');">
							<button type="submit" class="btn btn-sm btn-danger mx-2">
								<i class="bi bi-trash fs-6"></i> Delete
							</button>
						</form> *@
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
