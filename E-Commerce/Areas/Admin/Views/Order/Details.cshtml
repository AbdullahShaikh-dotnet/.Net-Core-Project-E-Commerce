                <ul class="list-group">
                    @foreach (var detail in Model.orderDetails)
                    {
                        <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-primary mb-1">@detail._Product.Title</h6>
                                <small class="p-2 text-muted fs-6">Price : @detail.Price.ToString("C")</small><br />
                                <small class="p-2 text-muted fs-6">Quantity : @detail.Count</small>
                            </div>
                            <p class="mb-0 fs-6">@((detail.Count * detail.Price).ToString("C"))</p>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between border-1 rounded-2 m-2">
                        <span>Total</span>
                        <strong class="fw-bolder">@Model.orderHeader.OrderTotal.ToString("C")</strong>
                    </li>
                </ul>
            </div>
            @if (Model.orderHeader.PaymentStatus == SD.Payment_Status_Delayed_Payment && Model.orderHeader.OrderStatus == SD.Status_Shipped && !canEdit)
            {
                <button asp-action="DelayedPayNow" asp-controller="Cart" asp-area="Customer" asp-route-OrderHeaderID="@Model.orderHeader.ID" type="submit"
                        class="btn btn-success w-100 mb-2 d-flex align-items-center justify-content-center rounded-2 btn-sm fs-6">
                    <i class="bi bi-cash-stack me-2 fs-4"></i>Pay Now
                </button>
            }

            @if (canEdit)
            {
                if (Model.orderHeader.OrderStatus == SD.Status_Approved)
                {
                    <button asp-action="StartProcessing" type="submit"
                            class="btn btn-outline-info bg-info-subtle text-info border-1 w-100 mb-2 d-flex align-items-center justify-content-center rounded-2 btn-sm fs-6">
                        <i class="bi bi-gear me-2 fs-4"></i>Start Processing
                    </button>
                }
                if (Model.orderHeader.OrderStatus == SD.Status_In_Process)
                {
                    <button id="btnShipOrder" asp-action="ShipOrder" onclick="return isValid()" type="submit" class="btn border-primary text-black border-1 w-100 mb-2 d-flex align-items-center justify-content-center rounded-2 btn-sm fs-6">
                        <i class="bi bi-truck me-2 fs-4"></i>Ship Order
                    </button>
                }
                @if (Model.orderHeader.OrderStatus != SD.Status_Refunded &&
               Model.orderHeader.OrderStatus != SD.Status_Cancelled &&
               Model.orderHeader.OrderStatus != SD.Status_Shipped)
                {
                    <button asp-action="CancelOrder" type="submit" class="btn btn-danger w-100 d-flex align-items-center
						justify-content-center btn-sm rounded border-1 fs-6">
                        <i class="bi bi-x-circle me-2 fs-4"></i>Cancel Order
                    </button>
                }
            }
            else if (User.IsInRole(SD.Role_Customer))
            {
                @if (Model.orderHeader.OrderStatus != SD.Status_Refunded &&
                   Model.orderHeader.OrderStatus != SD.Status_Cancelled &&
                   Model.orderHeader.OrderStatus != SD.Status_Shipped &&
                   Model.orderHeader.PaymentStatus == SD.Payment_Status_Approved)
                {
                    <button asp-action="CancelOrder" type="submit" class="btn btn-danger w-100 d-flex align-items-center
						justify-content-center btn-sm rounded border-1 fs-6">
                        <i class="bi bi-x-circle me-2 fs-4"></i>Cancel Order
                    </button>
                }
            }
        </div>
