                                        <label class="block text-sm font-medium text-gray-700 mb-1">Payment Due Date</label>
                                        <input value="@Model.orderHeader.PaymentDueDate.ToShortDateString()" type="text" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100" />
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Payment Date</label>
                                        <input value="@Model.orderHeader.PaymentDate.ToShortDateString()" type="text" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100" />
                                    </div>
                                }


                                <!-- Payment Status -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Payment Status</label>
                                    <input asp-for="orderHeader.PaymentStatus" type="text" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100" />
                                </div>


                                <!-- Shipping Date -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Shipping Date</label>
                                    <input value="@Model.orderHeader.ShippingDate.ToShortDateString()" type="text" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100" />
                                </div>

                                <!-- Payment Details -->
                                @if (canEdit)
                                {
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Session ID</label>
                                        <input value="@Model.orderHeader.SessionId" type="text" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Payment Intent ID</label>
                                        <input value="@Model.orderHeader.PaymentIntendID" type="text" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100" />
                                    </div>
                                }

                                <!-- Carrier -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Carrier</label>
                                    @if (canEdit)
                                    {
                                        <input asp-for="orderHeader.Carrier" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Enter carrier" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.Carrier" type="text" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100" placeholder="Enter carrier" />
                                    }
                                </div>
                                <!-- Tracking -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Tracking</label>
                                    @if (canEdit)
                                    {
                                        <input asp-for="orderHeader.TrackingNumber" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Enter tracking number" />
                                    }
                                    else
                                    {
                                        <input asp-for="orderHeader.TrackingNumber" type="text" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100" placeholder="Enter tracking number" />
                                    }
                                </div>

                            </div>


                        </div>
                    </div>
                </div>

                @if (canEdit)
                {
                    <div class="flex justify-end">
                        <button type="submit" asp-action="UpdateOrderDetails"
                                class="mt-4 rounded-md border border-slate-300 py-2 px-4 text-center text-md transition-all shadow-sm
                                    hover:shadow-lg text-slate-600 hover:text-white hover:bg-indigo-700 hover:border-indigo-900 focus:text-white focus:bg-slate-800
                                    focus:border-slate-800 active:border-slate-800 active:text-white active:bg-slate-800 disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                            Update Details
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Order Summary Section -->
        <div class="w-full lg:w-5/12 px-4 mb-6">
            <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
                <h4 class="text-xl font-semibold text-primary flex items-center mb-4">
                    <i class="bi bi-receipt mr-2"></i>Order Summary
                </h4>
                <!-- Order Status -->
                <div class="mb-4">
                    <div class="w-full p-4 bg-@(CssBasedOnStatus) border border-@(CssBasedOnStatus) rounded-lg flex items-center justify-between">
                        <span class="font-medium">Order Status - @Model.orderHeader.OrderStatus</span>
                        <i class="bi bi-info-circle text-lg"></i>
                    </div>
                </div>
                <!-- Order Items -->
                <div class="border border-gray-200 rounded-lg mb-4">
                    <ul class="divide-y divide-gray-200">
                        @foreach (var detail in Model.orderDetails)
                        {
                            <li class="p-4 flex justify-between items-center">
                                <div>
                                    <h6 class="text-primary font-semibold">@detail._Product.Title</h6>
                                    <small class="text-gray-500">Price: @detail.Price.ToString("C")</small><br />
                                    <small class="text-gray-500">Quantity: @detail.Count</small>
                                </div>
                                <p class="font-semibold">@((detail.Count * detail.Price).ToString("C"))</p>
                            </li>
                        }
                        <li class="p-4 flex justify-between items-center border-t border-gray-200">
                            <span class="font-semibold">Total</span>
                            <strong class="font-bold">@Model.orderHeader.OrderTotal.ToString("C")</strong>
                        </li>
                    </ul>
                </div>
                <!-- Action Buttons -->
                @if (Model.orderHeader.PaymentStatus == SD.Payment_Status_Delayed_Payment && Model.orderHeader.OrderStatus == SD.Status_Shipped && !canEdit)
                {
                    <button type="submit" asp-action="DelayedPayNow" asp-controller="Cart" asp-area="Customer" asp-route-OrderHeaderID="@Model.orderHeader.ID"
                            class="mb-2 w-full bg-gradient-to-r from-green-500 to-indigo-600 text-white font-semibold py-3 rounded-lg hover:opacity-90 transition-all shadow-md">
                        <i class="bi bi-cash-stack mr-2"></i>Pay Now
                    </button>
                }
                @if (canEdit)
                {
                    if (Model.orderHeader.OrderStatus == SD.Status_Approved)
                    {
                        <button type="submit" asp-action="StartProcessing" class="mb-2 w-full mt-4 rounded-md border border-slate-300 py-2 px-4 text-center text-md transition-all shadow-sm
                                    hover:shadow-lg text-teal-600 hover:text-white hover:bg-teal-600 hover:border-teal-900 focus:text-white focus:bg-teal-800
                                    focus:border-teal-800 active:border-teal-800 active:text-white active:bg-teal-800 disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                            <i class="bi bi-gear mr-2"></i>Start Processing
                        </button>
                    }
                    if (Model.orderHeader.OrderStatus == SD.Status_In_Process)
                    {
                        <button type="submit" asp-action="ShipOrder" onclick="return isValid()" class="mb-2 w-full mt-4 rounded-md border border-slate-300 py-2 px-4 text-center text-md transition-all shadow-sm
                                    hover:shadow-lg text-slate-600 hover:text-white hover:bg-indigo-600 hover:border-indigo-900 focus:text-white focus:bg-indigo-800
                                    focus:border-indigo-800 active:border-indigo-800 active:text-white active:bg-indigo-800 disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
                            <i class="bi bi-truck mr-2"></i>Ship Order
                        </button>
                    }
                    @if (Model.orderHeader.OrderStatus != SD.Status_Refunded && Model.orderHeader.OrderStatus != SD.Status_Cancelled && Model.orderHeader.OrderStatus != SD.Status_Shipped)
                    {
                        <button type="submit" asp-action="CancelOrder"
                                class=" bg-gradient-to-l from-red-700 to-red-600 text-white
                                    w-full mt-10 rounded-md py-2 px-4 text-center text-md transition-all shadow-sm
                                    hover:shadow-lg text-white hover:bg-red-600 focus:text-white focus:bg-red-800
                                    focus:border-red-800 active:border-red-800 active:text-white active:bg-red-800
                                    disabled:pointer-events-none disabled:opacity-50 disabled:shadow-non duration-300">
                            <i class="bi bi-x-circle mr-2"></i>Cancel Order
                        </button>
                    }
                }
                else if (User.IsInRole(SD.Role_Customer))
                {
                    @if (Model.orderHeader.OrderStatus != SD.Status_Refunded && Model.orderHeader.OrderStatus != SD.Status_Cancelled && Model.orderHeader.OrderStatus != SD.Status_Shipped && Model.orderHeader.PaymentStatus == SD.Payment_Status_Approved)
                    {
                        <button type="submit" asp-action="CancelOrder" class="w-full px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition-colors flex items-center justify-center">
                            <i class="bi bi-x-circle mr-2"></i>Cancel Order
                        </button>
                    }
                }
            </div>
        </div>
    </div>
</form>


<script>
        document.addEventListener("DOMContentLoaded", function () {


                                let AccordianBtn = document.querySelectorAll('.accordian-Button');
                        AccordianBtn.forEach(Abtn => Abtn.addEventListener('click', e => {

                            e.preventDefault();
                            let accordianIndex = e.target.dataset.index;



                      const content = document.getElementById(`content-${accordianIndex}`);
                      const icon = document.getElementById(`icon-${accordianIndex}`);

                      // SVG for Down icon
                      const upSVG = `
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                            </svg>
                      `;

                      // SVG for Up icon
                      const downSVG = `
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 15.75 7.5-7.5 7.5 7.5" />
                          </svg>
                      `;

                      // Toggle the content's max-height for smooth opening and closing
                      if (content.style.maxHeight && content.style.maxHeight !== '0px') {
                        content.style.maxHeight = '0';
                        icon.innerHTML = upSVG;
                      } else {
                        content.style.maxHeight = content.scrollHeight + 'px';
                        icon.innerHTML = downSVG;
                      }





                        } ) );










    });
</script>


@section Scripts {
    <script defer>
        const isValid = () => {
            const ValidateInputs = document.querySelectorAll(".ShipOrderValidate");
            let isValid = true;
            ValidateInputs.forEach(el => {
                const inputValue = el.value.trim();
                if (!inputValue) {
                    isValid = false;
                }
            });
            if (!isValid) {
                Swal.fire({
                    icon: "error",
                    title: "Invalid",
                    text: "Please Enter Tracking and Carrier"
                });
            }
            return isValid;
        }
    </script>
}