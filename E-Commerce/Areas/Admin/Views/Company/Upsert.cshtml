@model Company

@{
    ViewData["Title"] = "Company";
}

<div class="bg-white py-8">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="bg-white p-4 text-gray-700">
            <h1 class="text-3xl font-medium">@((Model.ID > 0 ? "Update " : "Create ") + ViewData["Title"])</h1>
        </div>

        <!-- Form Container -->
        <div class="bg-white border border-gray-200 rounded-md shadow-sm overflow-hidden mb-6">
            <form method="post" enctype="multipart/form-data" class="p-6 space-y-6">
                <input type="hidden" asp-for="ID" />

                <!-- Row 1 -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Name" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-gray-400" />
                        <span class="text-red-500 text-xs mt-1 block" asp-validation-for="Name"></span>
                    </div>
                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="PhoneNumber" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-gray-400" />
                        <span class="text-red-500 text-xs mt-1 block" asp-validation-for="PhoneNumber"></span>
                    </div>
                </div>

                <!-- Row 2 -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label asp-for="StreetAddress" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="StreetAddress" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-gray-400" />
                    </div>
                    <div>
                        <label asp-for="City" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="City" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-gray-400" />
                    </div>
                    <div>
                        <label asp-for="State" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="State" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-gray-400" />
                    </div>
                </div>

                <!-- Buttons -->
                <div class="flex justify-between items-center pt-4">
                    <a asp-controller="Company" asp-action="Index" class="text-gray-600 font-medium flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-1" fill="none" viewBox="0 0 24 24"
                             stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M15.75 19.5L8.25 12l7.5-7.5" />
                        </svg>
                        Back to List
                    </a>

                    <div class="ml-auto flex space-x-2">
                        @if (Model.ID == 0)
                        {
                            <button type="reset" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition">
                                Clear
                            </button>
                            <button type="submit" class="px-4 py-2 rounded-md text-white bg-gray-800 hover:bg-gray-700 focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition">
                                Create
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="px-4 py-2 rounded-md text-white bg-gray-800 hover:bg-gray-700 focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition">
                                Update
                            </button>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
