
@model ShoppingCartVM

<div class="container mx-auto px-4 py-6">
	<div class="text-center mb-6">
		<h2 class="text-2xl text-start text-gray-700 font-semibold">Order Summary</h2>
	</div>

	<form method="post">
		<div class="space-y-6">
			<div class="bg-white border rounded-lg p-4">
				<div class="flex flex-wrap justify-between gap-6">
					<!-- Shipping Details -->
					<div class="w-full lg:w-6/12">
						<h4 class="text-lg font-medium text-gray-800 mb-4">Shipping Details</h4>

						<div class="space-y-4">
							<!-- Name -->
							<div class="flex items-center gap-4">
								<label for="Name" class="w-1/3 text-sm font-medium text-gray-700">Name</label>
								<div class="w-2/3">
									<input id="Name" asp-for="orderHeader.Name" type="text" class="w-full p-2 border rounded-md bg-gray-100" />
									<span asp-validation-for="orderHeader.Name" class="text-sm text-red-500"></span>
								</div>
							</div>
							<!-- Phone -->
							<div class="flex items-center gap-4">
								<label for="Phone" class="w-1/3 text-sm font-medium text-gray-700">Phone</label>
								<div class="w-2/3">
									<input id="Phone" asp-for="orderHeader.PhoneNumber" type="text" class="w-full p-2 border rounded-md bg-gray-100" />
									<span asp-validation-for="orderHeader.PhoneNumber" class="text-sm text-red-500"></span>
								</div>
							</div>
							<!-- Street Address -->
							<div class="flex items-center gap-4">
								<label for="StreetAddress" class="w-1/3 text-sm font-medium text-gray-700">Street Address</label>
								<div class="w-2/3">
									<input id="StreetAddress" asp-for="orderHeader.StreetAddress" type="text" class="w-full p-2 border rounded-md bg-gray-100" />
									<span asp-validation-for="orderHeader.StreetAddress" class="text-sm text-red-500"></span>
								</div>
							</div>
							<!-- City -->
							<div class="flex items-center gap-4">
								<label for="City" class="w-1/3 text-sm font-medium text-gray-700">City</label>
								<div class="w-2/3">
									<input id="City" asp-for="orderHeader.City" type="text" class="w-full p-2 border rounded-md bg-gray-100" />
									<span asp-validation-for="orderHeader.City" class="text-sm text-red-500"></span>
								</div>
							</div>
							<!-- State -->
							<div class="flex items-center gap-4">
								<label for="State" class="w-1/3 text-sm font-medium text-gray-700">State</label>
								<div class="w-2/3">
									<input id="State" asp-for="orderHeader.State" type="text" class="w-full p-2 border rounded-md bg-gray-100" />
									<span asp-validation-for="orderHeader.State" class="text-sm text-red-500"></span>
								</div>
							</div>
							<!-- Postal Code -->
							<div class="flex items-center gap-4">
								<label for="PostalCode" class="w-1/3 text-sm font-medium text-gray-700">Postal Code</label>
								<div class="w-2/3">
									<input id="PostalCode" asp-for="orderHeader.PostalCode" type="text" class="w-full p-2 border rounded-md bg-gray-100" />
									<span asp-validation-for="orderHeader.PostalCode" class="text-sm text-red-500"></span>
								</div>
							</div>
						</div>
					</div>

					<!-- Order Summary -->
					<div class="w-full lg:w-5/12">
						<h4 class="text-lg font-medium text-gray-800 mb-4">Order Summary</h4>
						<ul class="space-y-3">
							@foreach (var item in Model.shoppingCartsList)
							{
								<li class="flex justify-between p-4 border rounded-md bg-gray-50">
									<div>
										<h6 class="font-medium text-gray-700">@item.product.Title</h6>
										<small class="text-sm text-gray-500">Quantity: @item.Count</small>
									</div>
									<span class="text-gray-600">@((item.product.Price * item.Count).ToString("C"))</span>
								</li>
							}
							<li class="flex justify-between p-4 mt-5 bg-gray-100 border-t rounded-md">
								<small class="font-semibold text-gray-700">Total (INR)</small>
								<strong class="text-xl text-gray-700">@Model.orderHeader.OrderTotal.ToString("C")</strong>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<!-- Footer Section with Estimated Delivery and Order Button -->
			<div class="bg-white rounded-lg border p-4">
				<div class="flex flex-col sm:flex-row justify-between items-center">
					<div class="sm:w-3/4">
						<p class="text-gray-600 text-lg font-light">
							Estimate Arrival Date
							<span class="font-semibold text-gray-700">
								@DateTime.Now.AddDays(7).ToString("dd/MM/yyyy") 
								<span class="font-normal text-gray-600"> to </span> @DateTime.Now.AddDays(14).ToString("dd/MM/yyyy")
							</span>
						</p>
					</div>
					<div class="sm:w-1/4 mt-4 sm:mt-0">
						<button asp-action="PlaceOrder" type="submit" value="Place Order" 
						class="w-full bg-gray-50 text-gray-700 py-2 rounded-md transition border focus:outline-none">
							<i class="bi bi-cart-check text-xl px-2"></i>
							Place Order
						</button>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}
