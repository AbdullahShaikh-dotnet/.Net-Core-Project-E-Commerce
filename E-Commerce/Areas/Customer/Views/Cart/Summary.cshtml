@model ShoppingCartVM

<div class="container">
	<div class="row pt-4">
		<div class="col-md-3">
			<h2 class="text-primary">Order Summary</h2>
		</div>
	</div>
</div>

<form method="post">
	<div class="row">
		<div class="col-12">
			<div class="border rounded-2 shadow-sm p-3 mt-2">
				<div class="row mb-3 pb-3">
					<div class="col-12 col-md-3 mb-2 mt-4">
						<a asp-action="Index" class="btn btn-secondary btn-sm border w-100 float-start">
							<i class="fs-6 p-1 bi bi-arrow-return-left"></i>
							Back to Cart
						</a>
					</div>
				</div>
				<div class="row">
					<div class="container rounded p-2">
						<div class="row">
							<div class="col-12 col-lg-6 pb-4">
								<div class="row">
									<h4 class="d-flex justify-content-between align-items-center mb-3">
										<span>Shipping Details</span>
									</h4>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Name</label>
									</div>
									<div class="col-9">
										<input class="form-control rounded-2" asp-for="orderHeader.Name" type="text" />
										<span class="fs-6 text-danger" asp-validation-for="orderHeader.Name"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Phone</label>
									</div>
									<div class="col-9">
										<input class="form-control rounded-2" asp-for="orderHeader.PhoneNumber" />
										<span class="fs-6 text-danger" asp-validation-for="orderHeader.PhoneNumber"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Street Address</label>
									</div>
									<div class="col-9">
										<input class="form-control rounded-2" asp-for="orderHeader.StreetAddress" />
										<span class="fs-6 text-danger" asp-validation-for="orderHeader.StreetAddress"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>City</label>
									</div>
									<div class="col-9">
										<input class="form-control rounded-2" asp-for="orderHeader.City" />
										<span class="fs-6 text-danger" asp-validation-for="orderHeader.City"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>State</label>
									</div>
									<div class="col-9">
										<input class="form-control rounded-2" asp-for="orderHeader.State" />
										<span class="fs-6 text-danger" asp-validation-for="orderHeader.State"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">
										<label>Postal Code</label>
									</div>
									<div class="col-9">
										<input class="form-control rounded-2" asp-for="orderHeader.PostalCode" />
										<span class="fs-6 text-danger" asp-validation-for="orderHeader.PostalCode"></span>
									</div>
								</div>
							</div>
							<div class="col-12 col-lg-5 offset-lg-1">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span>Order Summary</span>
								</h4>
								<ul class="list-group mb-3">
									@foreach (var item in Model.shoppingCartsList)
									{
										<li class="list-group-item d-flex justify-content-between">
											<div>
												<h6 class="my-0">@item.product.Title</h6>
												<small class="text-muted">Quantity: @item.Count</small>
											</div>
											<span class="text-muted">@((item.product.Price * item.Count).ToString("C"))</span>
										</li>
									}
									<li class="list-group-item d-flex justify-content-between bg-white mt-5 border">
										<small class="fw-bold">Total (INR)</small>
										<strong>@Model.orderHeader.OrderTotal.ToString("C")</strong>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
				<div class="card-footer">
					<div class="row">
						<div class="col-12 col-md-8 pt-2">
							<p class="text-danger fs-5">
								Estimate Arrival Date:
								<span class="fw-bold">
									@DateTime.Now.AddDays(7).ToString("dd/MM/yyyy") <span class="fw-normal text-primary">to</span> @DateTime.Now.AddDays(14).ToString("dd/MM/yyyy")
								</span>
							</p>
						</div>
						<div class="col-12 col-md-4">
							<button type="submit" value="Place Order"
									class="btn btn-outline-primary border-1 border-secondary shadow-sm rounded-2
									form-control transition-transform transform hover:scale-105 hover:shadow-lg">
								<i class="bi bi-cart-check fs-4 px-2"></i>
								Place Order
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}