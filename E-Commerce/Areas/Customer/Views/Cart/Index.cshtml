
<div class="container">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Shopping Cart</h2>
        </div>
    </div>
</div>


<form method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="border rounded-2 shadow-sm p-3 mt-2">
                <div class="row mb-3 pb-3">
                    <div class="col-md-2 offset-md-1 mb-2 mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-sm border mb-5">
                            <i class="fs-6 p-1 bi bi-arrow-return-left"></i>
                            Continue Shopping
                        </a>
                    </div>
                    <div class="col-md-10 offset-md-1">
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <img src="https://placehold.co/600x400" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="text-uppercase text-secondary"><strong>Title</strong></h5>
                                <p><small>Description</small></p>
                            </div>
                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-3 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        Price
                                        <span class="text-muted">&nbsp;x&nbsp;</span>Count
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="w-75 btn-group" role="group">
                                        <a class="btn btn-outline-primary bg-gradient py-2 border-1">
                                            <i class="bi bi-plus-lg"></i>
                                        </a> &nbsp;
                                        <a class="btn btn-outline-primary bg-gradient py-2 border-1">
                                            <i class="bi bi-dash-lg"></i>
                                        </a>
                                    </div>

                                </div>
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                    <a href="#" class="btn btn-danger bg-gradient py-2 ">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <div class="row">
                        <div class="col-md-4 offset-md-4">
                            <ul class="list-group mb-4">
                                <li class="d-flex justify-content-between align-items-center">
                                    <h5 class="text-dark fw-semibold text-uppercase"> Total (USD)</h5>
                                    <h4 class="text-dark fw-bolder">$$</h4>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 offset-md-5">
                            <a href="#" class="btn btn-primary border-0 bg-gradient w-100 py-2">Summary</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
